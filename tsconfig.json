{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@self": [
        "./src/index.ts"
      ]
    },
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "src",
    "examples",
  ],
  "exclude": [
    "node_modules"
  ]
}