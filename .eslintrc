{
    "ignorePatterns": [
        "node_modules/**/*",
        "lib/**/*",
        "types/**/*",
        "**/*.cjs"
    ],
    "env": {
        "es2022": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": { 
        "ecmaVersion": "latest", 
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "tsdoc"
    ],
    "rules": {
        "semi": ["warn", "never"],
        "quotes": ["warn", "single"],
        "indent": ["warn", 2, { "SwitchCase": 1 }]
    }
}